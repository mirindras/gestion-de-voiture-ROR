
<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Editer Voiture</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @voiture, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :num %>
        <%= form.text_field :num, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
